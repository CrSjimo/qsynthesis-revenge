/* Configuration */

Config {
    pattern: "\\\"\\{\\{(.*?)\\}\\}\\\"";
    separator: "|";
}


/* Stylesheet Content */

QWidget {
    font-family: '"{{font.family|str}}"';
    font-size: "{{font.size|size}}";
}

CWindowBarV2>CToolButton#icon-button {
    qproperty-iconUp: svg(":/svg/app/diffsinger.svg", "{{windowIcon.foreground|str}}");
}

HomeWindow {
    background-color: "{{background|str}}";
}

CNavFrame#home-frame>QSplitter::handle {
    width: 0;
}

CNavFrame#home-frame>QSplitter>QFrame#left-frame {
    background-color: "{{nav.background|str}}";
    padding: "{{nav.padding|size}}";
}

CNavFrame#home-frame>QSplitter>QFrame#right-frame {
    background-color: "{{main.background|str}}";
    padding: "{{main.padding|size}}";
}


/* Nav Buttons */

CTabButton[type=home-nav-button] {
    qproperty-iconSize: "{{nav.navButton.icon.size|size}}";
    qproperty-spaceRatio: "{{nav.navButton.spacing|num|0.2}}";
    background-color: "{{nav.navButton.background.up|str}}";
    color: "{{nav.navButton.color.up|str}}";
    border-color: "{{nav.navButton.border.color.up|str}}";
    border-width: "{{nav.navButton.border.size.up|size}}";
    border-style: "{{nav.navButton.border.style.up|str|none}}";
    padding: "{{nav.navButton.padding|size}}";
    margin: "{{nav.navButton.margin|size}}";
    text-align: "{{nav.navButton.color|str|left}}";
}

CTabButton[type=home-nav-button]:hover {
    background-color: "{{nav.navButton.background.over|str}}";
    color: "{{nav.navButton.color.over|str}}";
    border-color: "{{nav.navButton.border.color.over|str}}";
    border-width: "{{nav.navButton.border.size.over|size}}";
    border-style: "{{nav.navButton.border.style.over|str}}";
}

CTabButton[type=home-nav-button]:pressed {
    background-color: "{{nav.navButton.background.down|str}}";
    color: "{{nav.navButton.color.down|str}}";
    border-color: "{{nav.navButton.border.color.down|str}}";
    border-width: "{{nav.navButton.border.size.down|size}}";
    border-style: "{{nav.navButton.border.style.down|str}}";
}

CTabButton[type=home-nav-button]:checked {
    background-color: "{{nav.navButton.checked.background.up|str}}";
    color: "{{nav.navButton.checked.color.up|str}}";
    border-color: "{{nav.navButton.checked.border.color.up|str}}";
    border-width: "{{nav.navButton.checked.border.size.up|size}}";
    border-style: "{{nav.navButton.checked.border.style.up|str}}";
}

CTabButton[type=home-nav-button]:checked:hover {
    background-color: "{{nav.navButton.checked.background.over|str}}";
    color: "{{nav.navButton.checked.color.over|str}}";
    border-color: "{{nav.navButton.checked.border.color.over|str}}";
    border-width: "{{nav.navButton.checked.border.size.over|size}}";
    border-style: "{{nav.navButton.checked.border.style.over|str}}";
}

CTabButton[type=home-nav-button]:checked:pressed {
    background-color: "{{nav.navButton.checked.background.down|str}}";
    color: "{{nav.navButton.checked.color.down|str}}";
    border-color: "{{nav.navButton.checked.border.color.down|str}}";
    border-width: "{{nav.navButton.checked.border.size.down|size}}";
    border-style: "{{nav.navButton.checked.border.style.down|str}}";
}


/* Bottom Buttons */

CTabButton#home-about-button {
    qproperty-iconUp: svg(":/svg/home/info.svg", "{{nav.bottomButton.icon.up|str}}");
    qproperty-iconOver: svg(":/svg/home/info.svg", "{{nav.bottomButton.icon.over|str}}");
    qproperty-iconDown: svg(":/svg/home/info.svg", "{{nav.bottomButton.icon.down|str}}");
    qproperty-iconUpChecked: svg(":/svg/home/info.svg", "{{nav.bottomButton.icon.up.checked|str}}");
    qproperty-iconOverChecked: svg(":/svg/home/info.svg", "{{nav.bottomButton.icon.over.checked|str}}");
    qproperty-iconDownChecked: svg(":/svg/home/info.svg", "{{nav.bottomButton.icon.down.checked|str}}");
}

CTabButton[type=home-bottom-button] {
    qproperty-iconSize: "{{nav.bottomButton.icon.size|size}}";
    qproperty-spaceRatio: "{{nav.bottomButton.spacing|num|0.2}}";
    background-color: "{{nav.bottomButton.background.up|str}}";
    color: "{{nav.bottomButton.color.up|str}}";
    border-color: "{{nav.bottomButton.border.color.up|str}}";
    border-width: "{{nav.bottomButton.border.size.up|size}}";
    border-style: "{{nav.bottomButton.border.style.up|str|none}}";
    padding: "{{nav.bottomButton.padding|size|0}}";
    margin: "{{nav.bottomButton.margin|size|0}}";
    text-align: "{{nav.bottomButton.color|str|left}}";
}

CTabButton[type=home-bottom-button]:hover {
    background-color: "{{nav.bottomButton.background.over|str}}";
    color: "{{nav.bottomButton.color.over|str}}";
    border-color: "{{nav.bottomButton.border.color.over|str}}";
    border-width: "{{nav.bottomButton.border.size.over|size}}";
    border-style: "{{nav.bottomButton.border.style.over|str}}";
}

CTabButton[type=home-bottom-button]:pressed {
    background-color: "{{nav.bottomButton.background.down|str}}";
    color: "{{nav.bottomButton.color.down|str}}";
    border-color: "{{nav.bottomButton.border.color.down|str}}";
    border-width: "{{nav.bottomButton.border.size.down|size}}";
    border-style: "{{nav.bottomButton.border.style.down|str}}";
}